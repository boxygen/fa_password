<?xml version="1.0"?>
<ruleset name="PSR12">
    <description>PEAR standard sans file / doc comments.</description>

    <file>autoload.php</file>
    <file>hooks.php</file>
    <file>src</file>
    <file>tests</file>

    <exclude-pattern>/vendor/*</exclude-pattern>

    <rule ref="PSR12">
        <exclude name="PEAR.Commenting.FileComment.Missing"/>
        <exclude name="PSR12.Properties.ConstantVisibility"/>
    </rule>
</ruleset>

